#!/bin/sh

IMAGE="$(mktemp --tmpdir XXXX.png)"
ICON="$HOME/Pictures/images/icons/lock-blue.png"
TEXT="NO ACCESS"

# ---------------------------------------------------------------------------- #
# TAKE SCREENSHOT

scrot $IMAGE

# ---------------------------------------------------------------------------- #
# MANIPULATE IMAGE

#- GRAY EFFECT
gm mogrify \
  -colorspace gray \
  -scale 10% \
  -scale 1000% \
  $IMAGE

#- PLACE ICON
gm composite \
  -gravity center \
  $ICON $IMAGE $IMAGE




# ---------------------------------------------------------------------------- #
# CALL LOCKSCREEN

i3lock -ui $IMAGE



# ---------------------------------------------------------------------------- #
# REMOVE IMAGE

rm $IMAGE
