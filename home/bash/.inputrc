# ---------------------------------------------------------------------------- #
#- BASH OPTIONS

set show-all-if-unmodified on


# ---------------------------------------------------------------------------- #
#- KEY BINDINGS

# invoke the manual for the written command:
"\eh": "\C-a\eb\ed\C-y\e#man \C-y\C-m\C-p\C-p\C-a\C-d\C-e"

# enable Alt-arrows
"\e[5C": forward-word
"\e[5D": backward-word
"\e\e[C": forward-word
"\e\e[D": backward-word
"\e[1;5C": forward-word
"\e[1;5D": backward-word
"\e[1;3D": backward-word
"\e[1;3C": forward-word
